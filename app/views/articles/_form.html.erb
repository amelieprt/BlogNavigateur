<style>
html *{
  background-color: black;
}
label{
  color:white;
  margin-top:20px
}
textarea, input{
  background-color: white;
  width: 60vw;
  border-width: 3px;
  border-color:#cfa267;
}

</style>

<div style="margin-left:60px">

<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label, required: true :browser, style: "display: block" %>
    <%= form.text_field :browser %>
  </div>

  <div>
    <%= form.label :hat, style: "display: block" %>
    <%= form.text_field :hat %>
  </div>

  <div>
    <%= form.label :pro, style: "display: block" %>
    <%= form.text_area :pro %>
  </div>

  <div>
    <%= form.label :con, style: "display: block" %>
    <%= form.text_area :con %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.text_area :image %>
  </div>

  <div style="margin-top: 50px; margin-bottom: 50px;">
    <%= form.submit %>
  </div>
<% end %>

</div>
